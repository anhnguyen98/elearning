        btnInsertCourse.onclick = function(){   
            document.getElementById('load').style.display = "flex";
            loginForm.action="/login";
            loginForm.submit();
        }   --}}
        setInterval(function(){ 
				document.getElementById('msg').style.display = "none";
			}, 5000);
        document.body.onload = function (){
            var a = Math.floor(Math.random() * 50);
            var c = Math.floor(Math.random() * 50);
            var d = a+c;
            document.getElementById("demo").innerHTML = a+"+"+c ;
            document.getElementById("c").value = d;
        } 

        function check(){
            var a = Math.floor(Math.random() * 50);
            var c = Math.floor(Math.random() * 50);
            var d = a+c;
            document.getElementById("demo").innerHTML = a+"+"+c ;
            document.getElementById("c").value = d;
        } 

    var passText = document.getElementById('Password1');
    var btnEye = document.getElementsByClassName('btneye');
    btnEye[1].onclick = function(){
        btnEye[0].style.display = "";
        btnEye[1].style.display = "none";
        passText.type = "text";
    }
    btnEye[0].onclick = function(){
        btnEye[1].style.display = "";
        btnEye[0].style.display = "none";
        passText.type = "password";
    }
</script>
</div>

